source 'https://rubygems.org'

gem 'middleman', '~> 3.3.7'

# Font Awesome (http://fortawesome.github.io/Font-Awesome) integration
gem 'font-awesome-middleman', '~> 4.2.3'

# LiveReload (http://livereload.com) integration
gem 'middleman-livereload', '~> 3.4.2'

# Enable Slim (http://slim-lang.com) for authoring templates
gem 'slim', '~> 2.1.0'

# Enable AsciiDoc via Asciidoctor (http://asciidoctor.org) for authoring content
gem 'asciidoctor', '~> 1.5.2'
gem 'coderay', '~> 1.1.0'

# For faster file watcher updates on Windows
gem 'wdm', '~> 0.1.0', :platforms => [:mswin, :mingw]
# Windows does not come with time zone data
gem 'tzinfo-data', :platforms => [:mswin, :mingw]
